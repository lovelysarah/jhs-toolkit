{
    "private": true,
    "sideEffects": false,
    "prisma": {
        "seed": "node -r esbuild-register prisma/seed.ts"
    },
    "scripts": {
        "build": "remix build",
        "build:css": "postcss styles/global.css --output app/styles/global.css --env production",
        "dev": "npm-run-all build --parallel \"dev:*\"",
        "dev:node": "cross-env NODE_ENV=development nodemon --require dotenv/config ./server.js --watch ./server.js",
        "dev:remix": "remix watch",
        "dev:css": "postcss styles/global.css --output app/styles/global.css -w",
        "start": "cross-env NODE_ENV=production node ./server.js",
        "typecheck": "tsc",
        "db:test": "node -r esbuild-register prisma/playground.ts"
    },
    "dependencies": {
        "@prisma/client": "^4.14.0",
        "@remix-run/css-bundle": "^1.16.1",
        "@remix-run/express": "^1.16.1",
        "@remix-run/node": "^1.16.1",
        "@remix-run/react": "^1.16.1",
        "bcryptjs": "^2.4.3",
        "clsx": "^1.2.1",
        "compression": "^1.7.4",
        "cross-env": "^7.0.3",
        "daisyui": "^2.52.0",
        "express": "^4.18.2",
        "isbot": "^3.6.8",
        "lucide-react": "^0.233.0",
        "morgan": "^1.10.0",
        "nanoid": "^4.0.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-modal": "^3.16.1",
        "tiny-invariant": "^1.3.1"
    },
    "devDependencies": {
        "@remix-run/dev": "^1.16.1",
        "@remix-run/eslint-config": "^1.16.1",
        "@types/bcryptjs": "^2.4.2",
        "@types/compression": "^1.7.2",
        "@types/express": "^4.17.17",
        "@types/morgan": "^1.9.4",
        "@types/node": "^20.1.3",
        "@types/react": "^18.0.35",
        "@types/react-dom": "^18.0.11",
        "@types/react-modal": "^3.16.0",
        "@typescript-eslint/eslint-plugin": "^5.59.11",
        "@typescript-eslint/parser": "^5.59.11",
        "autoprefixer": "^10.4.14",
        "dotenv": "^16.0.3",
        "esbuild-register": "^3.4.2",
        "eslint": "^8.38.0",
        "eslint-plugin-react": "^7.32.2",
        "nodemon": "^2.0.22",
        "npm-run-all": "^4.1.5",
        "postcss-cli": "^10.1.0",
        "prisma": "^4.14.0",
        "tailwindcss": "^3.3.2",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4"
    },
    "engines": {
        "node": ">=14"
    }
}
